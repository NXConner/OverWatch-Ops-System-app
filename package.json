{
  "name": "blacktop-blackout-monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Blacktop Blackout: Ultimate intelligent command center for asphalt paving business",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "serve": "nx serve",
    "start": "nx serve api",
    "dev": "nx run-many --target=serve --projects=web-app,api --parallel",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint"
  },
  "private": true,
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@nrwl/workspace": "^19.8.11",
    "@nx/eslint": "^19.8.11",
    "@nx/jest": "^19.8.11",
    "@nx/node": "^19.8.11",
    "@nx/react": "^19.8.11",
    "@nx/vite": "^19.8.11",
    "@nx/workspace": "^19.8.11",
    "@types/node": "^22.10.5",
    "eslint": "^8.57.0",
    "nx": "^19.8.11",
    "prettier": "^3.3.3",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
