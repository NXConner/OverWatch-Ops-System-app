# Blacktop Blackout Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
API_PORT=3333
WEB_PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blacktop_blackout_dev
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/blacktop_blackout_dev

# Authentication & Security
JWT_SECRET=your-secret-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# External API Keys
WEATHER_API_KEY=your-weather-api-key-here
MAPS_API_KEY=your-google-maps-api-key-here
OPENWEATHER_API_KEY=your-openweather-api-key-here

# Business Configuration
BUSINESS_NAME="Blacktop Solutions LLC"
BUSINESS_ADDRESS="337 Ayers Orchard Road, Stuart, VA 24171"
BUSINESS_PHONE="(276) 555-0123"
BUSINESS_EMAIL="info@blacktopsolutions.com"

# SealMaster Supplier Configuration
SEALMASTER_ADDRESS="703 West Decatur Street, Madison, NC 27025"
SEALMASTER_PHONE="(336) 555-0456"

# Material Pricing (SealMaster)
PMM_SEALCOAT_PRICE=3.79
SAND_50LB_PRICE=10.00
CRACKMASTER_PRICE=44.95

# Labor Rates
LABOR_RATE_MIN=40
LABOR_RATE_MAX=60
OVERHEAD_MULTIPLIER=1.3

# Plugin Configuration
PLUGINS_ENABLED=true
PLUGINS_DIR=./plugins
PLUGIN_VERIFICATION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/application.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# File Upload Configuration
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,dxf,dwg
UPLOAD_DEST=./uploads

# Development Settings
DEBUG=blacktop:*
VERBOSE_LOGGING=true

# Production Settings (for .env.production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# CORS_ORIGIN=https://yourdomain.com
# SESSION_SECRET=your-session-secret-here